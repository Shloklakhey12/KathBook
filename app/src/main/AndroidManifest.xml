<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    package="com.example.kathbook">

    <dist:module dist:instant="true" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".AddNotice"
            android:label="Add Notice"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AddAssignment"
            android:label="Add Assignment"
            android:parentActivityName=".Assignments" />
        <activity
            android:name=".AddQuery"
            android:label="Add Query"
            android:parentActivityName=".Queries" />
        <activity
            android:name=".Settings"
            android:label="Settings"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".FPass" />
        <activity android:name=".Signup_Form" />
        <activity
            android:name=".Teachers"
            android:label="Teachers"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Assignments"
            android:label="Assignments"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".About"
            android:label="About"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Queries"
            android:label="Queries"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Syllabus"
            android:label="Syllabus"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".Login_Form" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" />
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>